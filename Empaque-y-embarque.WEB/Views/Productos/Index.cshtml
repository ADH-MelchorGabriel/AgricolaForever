<div id="app">
    <div class="card mb-4 wow fadeIn">
        <div class="card-header">
            <div class="card-card-title row">
                <h1 class="col-12 col-lg-2">Productos</h1>

                <div class="col-12 col-lg-10 text-right">
                    <button class="btn btn-success btn-sm" v-on:click="abrirModalNuevo">Nuevo</button>
                </div>
            </div>
        </div>
        <div class="card-body d-sm-flex justify-content-between">
            <span v-if="cargando">
                <img height="35" src="https://i.pinimg.com/originals/4e/b6/97/4eb697b60cf8d2ac12de99e12a444362.gif" />
                Cargando informacion...
            </span>
            <table id="tbContenido" class="table" v-if="!cargando">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Cultivo</th>
                        <th>Tamaño</th>
                        <th>Calidad</th>
                        <th>Envase</th>
                        <th>Cantidad</th>
                        <th>PesoKG</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in lista">
                        <td> {{item.codigo}}</td>
                        <td> {{item.nombre}}</td>
                        <td> {{item.cultivo}}</td>
                        <td> {{item.tamaño}}</td>
                        <td> {{item.calidad}}</td>
                        <td> {{item.envase}}</td>
                        <td> {{item.cantidad}}</td>
                        <td> {{item.pesoKg}}</td>
                        <td class="text-right">
                            <span v-if="item.estaActivo==true">
                                <button class="btn btn-success btn-sm" v-on:click="cambiarEstado(item.idProducto)">
                                    <i class=" fa fa-check mr-1"></i>  Activo
                                </button>
                            </span>
                            <span v-else>
                                <button class="btn btn-danger btn-sm" v-on:click="cambiarEstado(item.idProducto)">
                                    <i class="fa fa-times mr-1"></i> Cancelado
                                </button>
                            </span>
                            <button class="btn btn-warning btn-sm" v-on:click="abrirModalModificar(item.idProducto)">
                                <i class="fas fa-edit mr-1"></i> Modificar
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <partial name="_nuevo" />

</div>

@section Scripts{
    <script>
        var app = new Vue({
            el: '#app',

            data: {
                cargando: false,
                lista: [],
                cultivo: [],
                familiaCultivo: [],
                envase: [],
                tamaño: [],
                tipoCalidad: [],
                obj: {
                    idProducto: 0,
                    idEnvase: 0,
                    idTamaño: 0,
                    idCultivo: 0,
                    nombre: "",
                    libras:0,
                    pesoKg: 0,
                    cveFraccionArancelaria: "",
                    cveProductoServicio: "",
                    cveUnidadMedida: "",
                    cantidad: 0,
                    codigo: "",
                    calidad: -1,
                    folioGuia: "",
                    estaActivo: true,
                }
            },
            created: function () {
                this.listar();
                this.listarCultivo();
                this.listarEnvase();
                this.listarTamaño();
                this.listarCalidad();
                this.listarFamiliaCultivo();
            },
            methods: {
                async listar() {
                    var vm = this;
                    vm.cargando = true;
                    await axios
                        .get('Productos/listar')
                        .then(response => (vm.lista = response.data))
                        .catch(error => (console.log(error)))
                    vm.cargando = false;
                },
                async listarCultivo() {
                    var vm = this;
                    vm.cargando = true;
                    await axios
                        .get('Productos/GetCultivo')
                        .then(response => (vm.cultivo = response.data))
                        .catch(error => (console.log(error)))
                    vm.cargando = false;


                },
                async listarFamiliaCultivo() {
                    var vm = this;
                    vm.cargando = true;
                    await axios
                        .get('Productos/GetFamiliaCultivo')
                        .then(response => (vm.familiaCultivo = response.data))
                        .catch(error => (console.log(error)))
                    vm.cargando = false;
                },
                async listarEnvase() {
                    var vm = this;
                    vm.cargando = true;
                    await axios
                        .get('Productos/GetEnvase')
                        .then(response => (vm.envase = response.data))
                        .catch(error => (console.log(error)))
                    vm.cargando = false;
                },
                async listarTamaño() {
                    var vm = this;
                    vm.cargando = true;
                    await axios
                        .get('Productos/GetTamaño')
                        .then(response => (vm.tamaño = response.data))
                        .catch(error => (console.log(error)))
                    vm.cargando = false;
                },
                async listarCalidad() {
                    var vm = this;
                    vm.cargando = true;
                    await axios
                        .get('Productos/GetCalidad')
                        .then(response => (vm.tipoCalidad = response.data))
                        .catch(error => (console.log(error)))
                    vm.cargando = false;
                },
                async buscar(id) {
                    var vm = this;
                    await axios
                        .get('Productos/buscar', { params: { id } })
                        .then(response => (vm.obj = response.data))
                        .catch(error => (console.log(error)))
                },
                async guardar() {
                    var vm = this;
                    console.log(vm.obj)
                    await axios
                        .post('Productos/guardar', vm.obj)
                        .then(response => (
                            vm.listar(),
                            vm.cerrarModalNuevo()
                        ))
                        .catch(error => (console.log(error)))
                },
                async cambiarEstado(id) {
                    var vm = this;
                    await axios
                        .get('Productos/cambiarEstado', { params: { id } })
                        .then(response => (vm.listar()))
                        .catch(error => (console.log(error)))
                },


                calcularKg()
                {
                    this.obj.pesoKg = (this.obj.libras * 0.453592).toFixed(4);
                },
                limpiar() {
                    vm = this;
                    this.obj.idProducto = 0;
                    this.obj.idTamaño = 0;
                    this.obj.idEnvase = 0;
                    this.obj.idCultivo = 0;
                    this.obj.nombre = "";
                    this.obj.pesoKg = 0;
                    this.obj.libras = 0;
                    this.obj.cveFraccionArancelaria = "";
                    this.obj.cveProductoServicio = "";
                    this.obj.cveUnidadMedida = "";
                    this.obj.cantidad = null;
                    this.obj.codigo = "";
                    this.obj.calidad = -1;
                    this.obj.folioGuia = "";
                    this.obj.estaActivo = true;
                },
                abrirModalModificar(id) {
                    var vm = this;
                    vm.buscar(id);
                    $("#modalNuevo").modal("show");
                },
                abrirModalNuevo() {
                    this.limpiar();
                    $("#modalNuevo").modal("show");
                },
                cerrarModalNuevo() {
                    $("#modalNuevo").modal("hide");
                },
            },
        });
    </script>
}
